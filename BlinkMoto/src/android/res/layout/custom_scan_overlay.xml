<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:background="#cef">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_scan_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fl_scan_frame"

            android:layout_alignParentTop="true"
            android:background="@color/scan_shade"

            android:padding="6dp"
            android:gravity="center_horizontal|bottom"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="Bitte die FIN / VIN oder Barcode in diesem Bereich erfassen" />

        <View
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/result_container"

            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_scan_title"
            android:layout_toLeftOf="@+id/fl_scan_frame"
            android:background="@color/scan_shade" />

        <FrameLayout
            android:id="@+id/fl_scan_frame"
            android:layout_width="320dp"
            android:layout_height="66dp"

            android:layout_centerInParent="true"
            android:background="@drawable/scan_frame"
            android:padding="1dp">

            <ImageView
                android:id="@+id/iv_scan_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:contentDescription="@string/scanning_result_holder_desc"
                android:scaleType="fitXY"
                android:visibility="invisible" />
        </FrameLayout>

        <View
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/result_container"

            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_scan_title"
            android:layout_toRightOf="@+id/fl_scan_frame"
            android:background="@color/scan_shade" />

        <RelativeLayout
            android:id="@+id/result_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_below="@id/fl_scan_frame"

            android:background="@color/scan_shade"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_scan_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"

                android:gravity="center"
                android:textColor="#fff"
                android:textSize="20sp"
                tools:text="THW 80832" />

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_alignParentBottom="true"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_accent"

                android:onClick="onButtonClicked"

                android:padding="@dimen/btn_padding"
                android:textColor="@drawable/button_accent_text_color"
                android:textSize="@dimen/btn_text_size"
                android:lines="1"
                android:ellipsize="end"
                android:textAllCaps="false"

                tools:text="Ãœbernehmen" />

            <Button
                android:id="@+id/btn_repeat"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_alignParentBottom="true"

                android:layout_marginEnd="@dimen/btn_separation"
                android:layout_marginRight="@dimen/btn_separation"
                android:layout_toLeftOf="@+id/btn_accept"
                android:layout_toStartOf="@+id/btn_accept"
                android:background="@drawable/button_normal"

                android:onClick="onButtonClicked"

                android:padding="@dimen/btn_padding"
                android:textSize="@dimen/btn_text_size"
                android:lines="1"
                android:ellipsize="end"
                android:textAllCaps="false"

                tools:text="Wiederholen" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_alignParentBottom="true"

                android:layout_marginEnd="@dimen/btn_separation"
                android:layout_marginRight="@dimen/btn_separation"
                android:layout_toLeftOf="@+id/btn_repeat"
                android:layout_toStartOf="@+id/btn_repeat"
                android:background="@drawable/button_normal"

                android:onClick="onButtonClicked"

                android:padding="@dimen/btn_padding"
                android:textSize="@dimen/btn_text_size"
                android:lines="1"
                android:ellipsize="end"
                android:textAllCaps="false"

                tools:text="Abbrechen" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>